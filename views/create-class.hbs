<!DOCTYPE html>

{{>sidebar-trainer}}

<div>
        <div style="padding: 20px;padding-left: 100px;"><label style="font-size: 24px;color: #006739;"><strong>Create a class</strong></label>
            <hr>
        </div>
        <div style="width: 100%;height: 100%;padding-left: 100px;padding-right: 20px;padding-top: 10px;padding-bottom: 10px;min-height: 100%;">
            <div class="float-left" style="width: 90%;height: 100%;background: url(assets/img/conference.jpg) right / contain no-repeat, #f6f6f6;padding: 20px;margin: 5px;">
                <div class="d-flex" style="margin: 20px 10px;"><label class="float-left" style="padding-right: 30px;min-width: 120px;">

                    <strong>Course</strong></label>
                    
                    <div class="dropdown"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 150px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">Select Course&nbsp;</button>
                        <div class="dropdown-menu">
                            {{#each courseList}}
                            <a class="dropdown-item" href="#"> {{courseList.courseName}}</a>
                            {{/each}}
                        </div>
                    </div>
                </div>
            <div class="d-flex" style="margin: 20px 10px;"><label class="float-left" style="padding-right: 30px;min-width: 120px;"><strong>Start Date</strong></label>
                <div class="dropdown" style="margin-right: 5px;">

                    <button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 60px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">MM</button>
                    
                    <div class="dropdown-menu">
                        {{#each month}}
                        <a class="dropdown-item" href="#">{{this}}</a>
                        {{/each}}
                    </div>
                    
            </div>
            <div class="dropdown" style="margin-right: 5px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="true" type="button" style="width: 60px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">DD</button>
                <div
                    class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
        </div>
        <div class="dropdown" style="margin-right: 5px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 75px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">YYYY</button>
            <div
                class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
    </div>
    </div>
    <div class="d-flex" style="margin: 20px 10px;"><label class="float-left" style="padding-right: 30px;min-width: 120px;"><strong>End Date</strong></label>
        <div class="dropdown" style="margin-right: 5px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 60px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">MM</button>
            <div
                class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
    </div>
    <div class="dropdown" style="margin-right: 5px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 60px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">DD</button>
        <div
            class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
    </div>
    <div class="dropdown" style="margin-right: 5px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 75px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">YYYY</button>
        <div
            class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
    </div>
    </div>
    <div class="d-flex" style="margin: 20px 10px;"><label class="float-left" style="padding-right: 30px;min-width: 120px;"><strong>Start Time</strong></label>
        <div class="dropdown" style="margin-right: 5px;width: 75px;"><button class="btn btn-primary dropdown-toggle text-right text-dark" data-toggle="dropdown" aria-expanded="false" type="button" style="width: 75px;height: 30px;padding: 2px;background: #ffffff;border-color: rgb(0,0,0);border-radius: 5px;padding-right: 10px;">00:00</button>
            <div
                class="dropdown-menu"><a class="dropdown-item" href="#">First Item</a><a class="dropdown-item" href="#">Second Item</a><a class="dropdown-item" href="#">Third Item</a></div>
    </div>
