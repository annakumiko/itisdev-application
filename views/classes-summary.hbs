<!DOCTYPE html>

{{>sidebar-trainer}}

<div style="padding-left: 100px">
		<div style="padding: 20px" class="report-header">
			<div><label style="font-size: 30px;color: #006739;"><strong>Classes Summary Report</strong></label>
			<p>As of {{dateToday}} at {{currTime}}</p>
            <hr>
		</div>
		<div>
			<table class="reports">
                <thead style="background-color: #f6f6f6; padding:5px; height: 35px;">
                    <tr class="row-reports" style="text-align: left;">
                        <th class="col-reports">Class ID</th>
                        <th class="col-reports"  style="width: 10%;">Course</th>
                        <th class="col-reports"  style="width: 5%;">Section</th>
                        <th class="col-reports"  style="width: 23%;">Duration</th>
                        <th class="col-reports"  style="width: 10%;">Schedule</th>
                        <th class="col-reports"  style="width: 10%;">Total Sudents</th>
                        <th class="col-reports"  style="width: 10%;">Total Passed</th>
                        <th class="col-reports"  style="width: 10%;">Total Failed</th>
                        <th  class="col-reports" style="width: 12%;">Total Quizzes</th>
                    </tr>
                </thead>
                <tbody style="background-color: #fff;" id="endorsedtrainees">
                    {{#each classes}}
                    <tr  class="row-reports row-item" onclick="window.location.href = '/class-detailed/{{{classList.classID}}}'">
                        <td class="col-reports" style="text-align: center;">{{classList.classID}}</td>
                        <td class="col-reports" >{{course.courseName}}</td>
                        <td class="col-reports" style="text-align: center;">{{classList.section}}</td>
                        <td class="col-reports" >{{classList.startDate}} - {{classList.endDate}}</td>
                        <td class="col-reports" style="text-align: center;">{{classList.startTime}} - {{classList.endTime}}</td>
                        <td class="col-reports" style="text-align: right;">{{numStudents}}</td>
                        <td class="col-reports" style="text-align: right;">{{ttlPass}}</td>
                        <td class="col-reports" style="text-align: right;">{{ttlFail}}</td>
                        <td class="col-reports" style="text-align: right;">{{numQuizzes}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
		</div>
        <div style="padding-top: 10px;"class="report-footer">
            <p>END OF REPORT</p>
        </div>
	</div>