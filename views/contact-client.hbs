<!DOCTYPE html>

{{>sidebar-trainee}}

<div class="contact-clean" id="contactDiv">
    <form method="post" id="contact-client" style="margin-top: -30px;max-width: 650px;">
        <h2 class="text-center">Request an Interview</h2>
        {{!-- <h6 style="margin-top: -30px; margin-bottom:30px" class="text-center">{{companyName}}</h6> --}}
        <div class="form-group"><strong style="margin-right: 14px;">Company:</strong>
        <p style="display: inline-block;">{{companyName}} </p> <br>
        <strong style="margin-right: 16px;">Recipient:</strong>
        {{!-- <select style="height: 35px;width: 83%;" id="clientEmail">
        {{#each clients}}
        <option class="dropdown-item" href="#">{{email}}</option> {{/each}} </select>  --}}
        <p style="display: inline-block;" id="email">{{email}} </p> <br>
        <strong style="margin-right: 30px;">Subject:</strong>
        <p style="display: inline-block;">[REQUEST FOR INTERVIEW] {{fullName}} </p></div>
        <div class="form-group"><textarea class="form-control" name="message" id="emailText" placeholder="Message" rows="14"></textarea>
        <p id="eEmail" class="error"> {{eEmail}} </p></div>
        <div class="form-group" id="btnS">
            <button class="btn btn-primary" id="sendEmailBTN" type="button">Send</button>
            <a href="/clientlist">
            <button class="btn btn-primary" id="cancelEmailBTN" type="button">Cancel</button></a></div>
    </form>
</div>