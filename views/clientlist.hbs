<!DOCTYPE html>

{{>sidebar-trainee}}
<div style="padding-left: 100px">
<label style="color: #006739;font-size: 25px;font-weight: bold;margin-top: 20px;">The VA Hub Clients</label><label></label>
    {{!-- <a href="/contact-client">
    <button id="contactBTN" class="btn btn-primary" type="button" style="margin-left: 850px; margin-top:-10px;font-size: 15px;text-align: center;background-color: #37ac50;width: 120px;">Contact Client</button></a> --}}
    <hr>
    <div class="table-responsive" style="width: 95%;margin-top: 25px;background-color: rgba(163,164,167,0.11);">
        <table class="table" id="clientTable">
            <thead>
                <tr style="text-align: center;font-size: 17px;background-color:#006739;color:white">
                    <th id="clientName" style="width: 25%;">Name</th>
                    <th id="clientCompany" style="width: 30%;">Company</th>
                    <th id="clientEmail">Email</th>
                    <th id="clientContactNum">Contact Number</th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr onclick="window.location.href='/contact-client/{{{email}}}/{{{companyName}}}'">
                    <td>{{clientName}}</td>
                    <td>{{companyName}}</td>
                    <td>{{email}}</td>
                    <td>{{contactNo}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
