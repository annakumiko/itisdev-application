            <thead>
                <tr style="text-align: center;font-size: 17px;background-color:#006739;color:white">
                    <th id="clientName" style="width: 25%;">Name</th>
                    <th id="clientCompany" style="width: 30%;">Company</th>
                    <th id="clientEmail">Position</th>
                    <th id="clientContactNum">Contact Number</th>
                </tr>
            </thead>
            <tbody>
                {{#each clients}}
                <tr id="row">
                    <td>{{clientName}}</td>
                    <td>{{companyName}}</td>
                    <td>{{email}}</td>
                    <td>{{contactNo}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

